<World name="Example Render">

    <!--Define the Camera-->
    <Views>
        <Camera id="Main Camera">
            <Position x="0.0" y="0.0" z="0.0"/>
            <Orientation x="0.0" y="0.0" z="0.0"/>
            <FocalLength>1.0</FocalLength>
        </Camera>
        <Camera id="Sub Camera">
            <Position x="0.0" y="0.0" z="0.0"/>
            <Orientation x="0.0" y="0.0" z="0.0"/>
            <FocalLength>1.0</FocalLength>
        </Camera>
    </Views>

    <!--Define the Scene-->
    <Scene>
        <Object id="Sphere_01" type="FF_SPHERE">
            <Position x="0.0" y="-42.0" z="-10.0"/>
            <Radius>40</Radius>
            <Material type="Lambert">
                <Albedo r="0" g="1" b="0" a="1"/>
            </Material>
        </Object>

        <Object id="Sphere_02" type="FF_SPHERE">
            <Position x="0.0" y="0.5" z="-10.0"/>
            <Radius>2.5/</Radius>
            <Material type="Lambert">
                <Albedo r="1" g="0" b="1" a="1"/>
            </Material>
        </Object>


        <Object id="Sphere_03" type="FF_SPHERE">
            <Position x="3.0" y="0.0" z="-19.0"/>
            <Radius>3</Radius>
            <Material type="Lambert">
                <Albedo r="0.5" g="1" b="1" a="1"/>
            </Material>
        </Object>



    </Scene>
</World>
